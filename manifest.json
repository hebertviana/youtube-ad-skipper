{
    "manifest_version": 3,
    "name": "Ad Skipper",
    "version": "1.4",
    "description": "Automatically skips ads.",
    "update_url": "https://raw.githubusercontent.com/hebertviana/youtube-ad-skipper/main/version.json",
    "homepage_url": "https://raw.githubusercontent.com/hebertviana/youtube-ad-skipper/main/update.html",
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "src/contentScript.js"
            ]
        }
    ],
    "action": {
        "default_title": "Ad Skipper",
        "default_popup": "src/popup.html",
        "default_icon": {
            "16": "images/16.png",
            "48": "images/48.png",
            "128": "images/128.png"
        }
    },
    "permissions": [
        "activeTab",
        "storage"
    ]
}
